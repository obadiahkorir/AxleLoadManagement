@model Axle_Load_Control.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
    <title>Login -Permit Portal</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="account-page">
            <div class="container">
                <h3 class="account-title">KeRRA Permits Portal</h3>
                <div class="account-box">
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger" id="alert-danger" role="alert">
                            @TempData["error"]
                        </div>

                    }
                    else if (TempData["error1"] != null)
                    {
                        <div class="alert alert-success" id="alert-danger" role="alert">
                            @TempData["error1"]
                        </div>
                    }

                    <div class="account-wrapper">
                        <div class="account-logo">
                            <a href="index.html"><img src="~/assets/img/favicon.png" alt="KeRRA"></a>
                        </div>
                        @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group form-focus">
                                <label class="control-label">Username or Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control floating", @required = "required", placeholder = "Email.e.g.Obadiah@gmail.com" } })
                                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                            </div>
                            <div class="form-group form-focus">
                                <label class="control-label">Password</label>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control floating", @required = "required", placeholder = "****************", @type = "password",  @id="txtpassword" } })
                                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                            </div>
                            <div class="form-group text-center">
                                @*<a href="@Url.Action("Dashboard", "Home")" class="btn btn-primary btn-block account-btn">Login</a>*@
                                <button type="submit" class="btn btn-primary btn-block account-btn">Sign In</button>
                            </div>
                            <div class="text-center">
                                <a href="@Url.Action("Signup", "Home")">Signup</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="@Url.Action("Signup", "Home")">Forgot your password?</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <center>
        <div class="container body-content">
            <hr />
            <footer>
                <strong><p>Copyright&copy; @DateTime.Now.Year - Designed and Developed by Dynasoft Business Solutions</p></strong>
            </footer>
        </div>
    </center>
    <div class="sidebar-overlay" data-reff="#sidebar"></div>
    <script type="text/javascript" src="~/assets/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/app.js"></script>
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
        </script>
    }
</body>
</html>